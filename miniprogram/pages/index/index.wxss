.chat-scroll-view {
  height: calc(100vh - 200rpx);
  overflow-y: auto;
}

.message {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-message {
  justify-content: flex-end;
}

.model-message {
  justify-content: flex-start;
}

.avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.user-avatar {
  margin-right: 10rpx;
}

.model-avatar {
  margin-left: 10rpx;
}

.message-text {
  padding: 10rpx;
  border-radius: 20rpx;
  max-width: 90%;
  background-color: #e0e0e0;
  color: black;
}

.input-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  border: 1px solid #ccc;
  border-radius: 25rpx;
  width: 90%;
}